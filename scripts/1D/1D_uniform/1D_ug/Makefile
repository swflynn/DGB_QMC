#==============================================================================#
#			    Fortran Compiler/Flags
#==============================================================================#
FC=gfortran 
#FFLAGS=-O2
FFLAGS=-O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace -llapack
#==============================================================================#
#				 Targets
#==============================================================================#
all: dgb_1D
#==============================================================================#
#			Compile all Fortran Files
#==============================================================================#
%.o: %.f90
	$(FC) $(FFLAGS) -o $@ -c $^
#==============================================================================#
#				DGB Monomer
#==============================================================================#
dgb_1D: sobol.o sobol_stdnormal.o 1D_ug.o 
	$(FC) -o $@ $^ -llapack

clean:
	rm -f *.o *.mod dgb_1D
